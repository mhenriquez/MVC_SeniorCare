
@{
    ViewBag.Title = Model.Name;
}

@section scripts {}

<section class="section-three">
    <div class="container">
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <p><strong>Address:</strong> @Model.AddressLine1</p>
            <hr />
            <p><strong>Description:</strong> @Model.Description</p>
        </div>
        <div class="col-md-6">
            <img src="/api/facilityimage/@Model.ID" alt="Photo of @Model.Name" />
        </div>
    </div>
</section>
